<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_phone_home_screen"
    tools:context=".phoneHomeScreen"
    android:background="@drawable/americanflagbackground">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USE LOCATION"
        android:fontFamily="sans-serif"
        android:textSize="10pt"
        android:textAlignment="center"
        android:id="@+id/autoLocation"
        android:textColor="#ffffff"
        android:layout_above="@+id/manualZipCode"
        android:layout_marginBottom="12dp"
        android:width="200dp"
        android:layout_alignEnd="@+id/manualZipCode"
        android:height="55dp"
        android:background="@drawable/buttonborder1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:src="@drawable/or"
        android:gravity="center"
        android:layout_below="@+id/autoLocation"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:text="ENTER ZIP CODE"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textSize="10pt"
        android:textStyle="italic"
        android:textAlignment="center"
        android:id="@+id/manualZipCode"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="35dp"
        android:textColor="#ffffff"
        android:width="200dp"
        android:layout_alignParentTop="@+id/autoLocation"
        android:background="@drawable/edittextborder"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#e79909"
        android:layout_below="@+id/titleImage"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:id="@+id/titleImage"
        android:src="@drawable/represent"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
